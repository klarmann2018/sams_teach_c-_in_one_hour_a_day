#include <iostream>
using namespace std;
class Human{
    private:
        int age;
    public:
        void setAge(int Age){
       age=Age; 
        }
        int getAge(){
       if(age>30)
           return (age-2);
       else
           return age;
        }
};

int main(){
Human eva;
eva.setAge(33);

Human adam;
adam.setAge(20);

cout<<" eva age: " << eva.getAge()<<endl;
cout<<" adam age: " << adam.getAge()<<endl;

}


